<?xml version="1.0" encoding="UTF-8"?>

<simulation>
    <output>
        <writeFrequency>10</writeFrequency>
        <create_checkpoint_file>true</create_checkpoint_file>
    </output>
    <parameters>
        <delta_t>0.0005</delta_t>
        <t_end>15</t_end>
        <epsilon>1</epsilon>
        <sigma>1.2</sigma>
        <containerType>linked</containerType>
        <domainSize>
            <x>303</x>
            <y>180</y>
            <z>1</z>
        </domainSize>
        <cutoff>3.0</cutoff>
        <boundary>
            <xTop>reflecting</xTop>
            <xBottom>reflecting</xBottom>
            <yLeft>reflecting</yLeft>
            <yRight>reflecting</yRight>
            <zFront>outflow</zFront>
            <zBehind>outflow</zBehind>
        </boundary>
        <grav><x>0</x>
            <y>-12.44</y>
            <z>0</z>
        </grav>
    </parameters>
    <clusters>
        <cuboid>
            <cornerCoordinates>
                <x>1.5</x>
                <y>2.0</y>
                <z>0.0</z>
            </cornerCoordinates>
            <dimensions>
                <x>100</x>
                <y>30</y>
                <z>1</z>
            </dimensions>
            <velocity>
                <x>0.0</x>
                <y>0.0</y>
                <z>0.0</z>
            </velocity>
            <meshWidth>1.2</meshWidth>
            <mass>1.0</mass>
            <brownianMotion>0.0</brownianMotion>
        </cuboid>
    </clusters>
    <thermo>
        <init_T>0.5</init_T>
        <n>1000</n>
    </thermo>
</simulation>
