<?xml version="1.0" encoding="UTF-8"?>

<simulation>
    <output>
        <writeFrequency>10</writeFrequency>
    </output>
    <parameters>
        <delta_t>0.0005</delta_t>
        <t_end>40</t_end>
        <epsilon>1</epsilon>
        <sigma>1.2</sigma>
        <containerType>linked</containerType>
        <domainSize>
            <x>303</x>
            <y>180</y>
            <z>1</z>
        </domainSize>
        <cutoff>3.0</cutoff>
        <boundary>
            <xTop>reflecting</xTop>
            <xBottom>reflecting</xBottom>
            <yLeft>reflecting</yLeft>
            <yRight>reflecting</yRight>
            <zFront>outflow</zFront>
            <zBehind>outflow</zBehind>
        </boundary>
        <grav>
            <x>0</x>
            <y>-12.44</y>
            <z>0</z>
        </grav>
        <import_checkpoint>
            <file_path>
                ../input/checker.txt
            </file_path>
        </import_checkpoint>
    </parameters>
    <clusters>
        <disc>
            <center>
                <x>150</x>
                <y>150</y>
                <z>0</z>
            </center>
            <velocity>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </velocity>
            <mass>1.0</mass>
            <meshWidth>1.2</meshWidth>
            <radius>20</radius>
        </disc>
    </clusters>
    <thermo>
        <init_T>0.5</init_T>
        <n>1000</n>
    </thermo>
</simulation>
